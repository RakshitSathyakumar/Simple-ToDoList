<%- include("header") -%>
<body>
    <div class="box" id="heading">
        <h1> <%=listTitle %></h1>
    </div>
    
    <div class="box">
        <%if(listItems.length === 0){%>
            <h2 style="color: green;">NO tasks Pending</h2>
        <%}else{%>


            <%for(var i=0;i<listItems.length;i++){%>

            <form action="/delete" method="post">
                <div class="item">
                    <input type="checkbox" name="checkbox" value= "<%=listItems[i]._id %>"  onChange="this.form.submit()">
                    <p>  <%=listItems[i].name%> </p>
                </div>
            </form>
                
            <%}%>
        <%}%>

        <form class="item" action="/" method="post">
            <input type="text" name="newTodo" placeholder="New Item" autocomplete="off" required>
            <button type="submit" name="listSubmit" value= "<%= listTitle %>" >+</button>
          </form>

    </div>

    
</body>

<%- include("footer") -%>

</html>